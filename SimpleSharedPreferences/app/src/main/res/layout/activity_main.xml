    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:layout_marginLeft="70dp"
        android:text="Nombre:"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/escribirNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtNombre"
        android:layout_alignBottom="@id/txtNombre"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNombre"
        android:layout_alignRight="@id/txtNombre"
        android:text="Apellido"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/escribirApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:layout_alignBottom="@id/txtApellido"
        android:layout_toRightOf="@id/txtApellido"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/escribirApellido"
        android:layout_marginVertical="50dp"
        android:text="Login"/>

 <TextView
     android:id="@+id/txtNombreObtenido"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/btnLogin"/>

 <TextView
     android:id="@+id/txtApellidoObtenido"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/txtNombreObtenido"/>




</RelativeLayout>