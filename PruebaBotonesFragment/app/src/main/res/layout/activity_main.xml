<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a fragment:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnFirstFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Fragment"/>

    <Button
        android:id="@+id/btnSecondFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Fragment"/>

    <fragment
        android:id="@+id/fragmento1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="es.iesnervion.diana.pruebabotonesfragment.FirstFragment"
        tools:layout="@layout/first_fragment"/>
    <fragment
        android:id="@+id/fragmento2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="es.iesnervion.diana.pruebabotonesfragment.SecondFragment"
        tools:layout="@layout/first_fragment"/>


</RelativeLayout>